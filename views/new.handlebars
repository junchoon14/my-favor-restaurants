<div class="container form_container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <h4 class="text-center mb-3 font-color">加入餐廳資料</h4>
      <form action="/restaurants" method="POST">
        <div class="form-group">
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <label for="name" class="input-group-text bg-light">
                餐廳名稱
              </label>
            </div>
            <input type="text" class="form-control" id="name" placeholder="Enter Name" name="name">
          </div>
        </div>

        <div class="form-group">
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <label for="name_en" class="input-group-text bg-light">
                餐廳英文名稱
              </label>
            </div>
            <input type="text" class="form-control" id="name_en" placeholder="Enter Engish Name" name="name_en">
          </div>
        </div>

        <div class="form-group">
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <label for="category" class="input-group-text bg-light">
                <i class="fas fa-utensils pr-2"></i>
                &nbsp 餐廳類型
              </label>
            </div>
            <input type="text" class="form-control" id="category" placeholder="Enter Category" name="category">
          </div>
        </div>

        <div class="form-group">
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <label for="image" class="input-group-text bg-light">
                <i class="fas fa-camera"></i>
                &nbsp 餐廳照片
              </label>
            </div>
            <input type="text" class="form-control" id="photo-link" placeholder="Link to Photo" name="image">
          </div>
        </div>

        <div class="form-group">
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <label for="location" class="input-group-text bg-light">
                <i class="fas fa-home"></i>
                &nbsp 地址
              </label>
            </div>
            <input type="text" class="form-control" id="location" placeholder="Enter Address" name="location">
          </div>
        </div>

        <div class="form-group">
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <label for="phone" class="input-group-text bg-light">
                <i class="fas fa-phone-square"></i>
                &nbsp 電話
              </label>
            </div>
            <input type="text" class="form-control" id="phone" placeholder="Enter Phone Number" name="phone">
          </div>
        </div>

        <div class="form-group">
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <label for="google_map" class="input-group-text bg-light">
                <i class="fas fa-map-pin"></i>
                &nbsp Google Map
              </label>
            </div>
            <input type="text" class="form-control" id="google_map" placeholder="Enter Google Map" name="google_map">
          </div>
        </div>

        <div class="form-group">
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <label for="rating" class="input-group-text bg-light">
                <i class="fas fa-star fa-xs"></i>
                &nbsp 評分
              </label>
            </div>
            <input type="text" class="form-control" id="rating" placeholder="Rate: Give 1 ~ 5 P oint" name="rating">
          </div>
        </div>

        <div class="form-group">
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <label for="description" class="input-group-text bg-light">簡介</label>
            </div>
            <textarea class="form-control" id="intro" aria-label="With textarea" placeholder="Introduction"
              name="description"></textarea>
          </div>
        </div>

        <button type="submit" class="btn btn-info">送出</button>
      </form>
    </div>
  </div>
</div>